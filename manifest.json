{
    "manifest_version": 3,
    "name": "Re-Font",
    "version": "2.0.0",
    "description": "Allows customization of fonts on websites.",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab"],
    "browser_action": {
        "default_icon": "ReFont128.png",
        "default_popup": "popup.html",
        "default_title": "Customize"
    },
    "icons": {
        "16": "ReFont16.png",
        "32": "ReFont32.png",
        "48": "ReFont48.png",
        "128": "ReFont128.png"
    }
}
