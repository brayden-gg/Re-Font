{
  "manifest_version": 2,
  "name": "Re-Font",
  "version": "1.0.4",
  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background":{
    "scripts": ["background.js"]
  },
  "permissions": [
          "tabs"
        ],
  "browser_action":{
    "default_icon": "ReFont128.png",
    "default_popup": "popup.html",
    "default_title": "Customize"
  },
  "icons": {
      "16": "ReFont16.png",
      "32": "ReFont32.png",
      "48": "ReFont48.png",
      "128": "ReFont128.png"
    }
}
